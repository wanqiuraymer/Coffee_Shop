@model List<Product>

<h2>Results</h2>

<table class="table">
	<tr>
		<th>Product Name</th>
		<th>Price</th>
		<th>Actions</th>
	</tr>
	@foreach(Product product in Model)
	{
		<tr>
			<td>@product.ProductName</td>
			<td>$ @product.Price</td>
			<td>
				<a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">Details</a>
			</td>
		</tr>
	}
</table>

@Html.ActionLink("Back to Products", "Index", "Products")