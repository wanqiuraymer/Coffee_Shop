@model IEnumerable<User>

<h2>Users</h2>

<table class="table">
	<tr>
		<th>User ID</th>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
		<!--<th>Password</th>-->
		<th>Actions</th>
	</tr>

	@foreach (User user in Model)
	{
		<tr>
			<td>@user.Id</td>
			<td>@user.FirstName</td>
			<td>@user.LastName</td>
			<td>@user.Email</td>
			<!--<td>@user.Password</td>-->
			<td>
				<a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id">Details</a>
			</td>
		</tr>
	}
</table>
<p>
	@Html.ActionLink("New User Registration", "Create", "Users")
</p>
